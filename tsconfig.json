{
	"compilerOptions": {
		"lib": ["es5", "dom" ],
		"types": ["node", "reflect-metadata", "inversify"],
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": false,
		"sourceMap": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"@root/*"         : ["./*"],
			"@app/*"          : ["./app/*"],
			"@api/*"          : ["./app/controllers/*"],
			"@appDb/*"        : ["./app/database/*"],
			"@models/*"       : ["./app/models/*"],
			"@modules/*"      : ["./app/modules/*"],
			"@core/*"         : ["./core/*"],
			"@cli/*"          : ["./core/terminal/*"],
			"@utils/*"        : ["./core/utils/*"],
			"@networking/*"   : ["./core/networking/*"],
			"@database/*"     : ["./core/database/*"]
		}
	},
	"exclude": [
		"test",
		"cli",
		"node_modules",
		"app/modules/user"
	]
}
